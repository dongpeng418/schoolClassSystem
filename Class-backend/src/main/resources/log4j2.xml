<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="PID">????</Property>
        <Property name="BASE_DIR">./logs</Property>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
        <Property name="CONSOLE_LOG_PATTERN">%clr{%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %clr{${LOG_LEVEL_PATTERN}} %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
        <Property name="FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} ${sys:PID} --- [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</Property>
        <Property name="KAFKA_LOG_PATTERN">
            %d{${LOG_DATEFORMAT_PATTERN}}@@${LOG_LEVEL_PATTERN}@@%t@@%c@@%m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}
        </Property>
    </Properties>
    <Appenders>
        <!-- 控制台输出 -->
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${sys:CONSOLE_LOG_PATTERN}"/>
        </Console>
        <!-- 错误日志文件 -->
        <RollingFile name="errorFile" fileName="${BASE_DIR}/error/error.log"
                     filePattern="${BASE_DIR}/error/error-%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${sys:FILE_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${BASE_DIR}/error">
                    <IfLastModified age="90d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <!-- 警告日志文件 -->
        <RollingFile name="warnFile" fileName="${BASE_DIR}/warn/warn.log"
                     filePattern="${BASE_DIR}/warn/warn-%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${sys:FILE_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${BASE_DIR}/warn">
                    <IfLastModified age="90d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <!-- 其它级别日志文件 -->
        <RollingFile name="otherFile" fileName="${BASE_DIR}/info/info.log"
                     filePattern="${BASE_DIR}/info/info-%d{yyyy-MM-dd}.log">
            <Filters>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="${sys:FILE_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${BASE_DIR}/info">
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <!-- kafka异常时日志文件 -->
        <RollingFile name="kafkaFile" fileName="${BASE_DIR}/kafka/kafka.log"
                     filePattern="${BASE_DIR}/kafka/kafka-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${sys:FILE_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${BASE_DIR}/kafka">
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <!-- 发送日志到kafka -->
        <Kafka name="kafka" topic="avs-log" ignoreExceptions="false">
            <PatternLayout pattern="${sys:KAFKA_LOG_PATTERN}"/>
            <Property name="bootstrap.servers">localhost:9092</Property>
            <Property name="max.block.ms">2000</Property>
        </Kafka>
        <Failover name="failover" primary="kafka" retryIntervalSeconds="600">
            <Failovers>
                <AppenderRef ref="kafkaFile"/>
            </Failovers>
        </Failover>
    </Appenders>
    <Loggers>
        <Logger name="org.apache.kafka" level="error"/>
        <Root level="info">
            <AppenderRef ref="console"/>
            <AppenderRef ref="errorFile"/>
            <AppenderRef ref="warnFile"/>
            <AppenderRef ref="otherFile"/>
            <!--<AppenderRef ref="failover" />-->
        </Root>
    </Loggers>
</Configuration>